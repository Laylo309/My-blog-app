<div class="d-flex justify-content-between nav-style mb-2">
  <div class="d-flex justify-content-around users-list p-05 navbar">
    <%= link_to root_path, class: 'link-to-default nav-link-style text-decoration-none text-color' do %>
      <h2 class="mr-2">My blog app</h2>
    <% end %>
    <% if user_signed_in? %>
      <%= @current_user.name %>
      <%= link_to user_posts_path(@current_user.id), :action => 'go', class: 'link-to-default nav-link-style text-decoration-none text-color' do %>
        <h2>Your Posts</h2>
      <% end %>
    <% end %>
    <div class="d-flex justify-content-between navbar-button">
      <div>
        <% if user_signed_in? %>
          <%= link_to  new_user_post_path(@current_user.id), :action => 'go', class: 'link-to-default nav-link-style' do %>
            <button type="submit" class="post-btn mr-2">New Post</button>
          <% end %>
        <% end %>
      </div>
      <div>
        <% if user_signed_in?%>
          <%= link_to  destroy_user_session_path, :method => :delete, class: 'link-to-default nav-link-style' do %>
            <button type="submit" class="post-btn">Log Out</button>
          <% end %>
        <%end%>
      </div>
    </div>
  </div>
</div>
